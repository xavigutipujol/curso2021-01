<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="Ticket">
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
        
            <form string="Ticket">
            
                <header>
                    <button string="Asignar" name="asignar" type="object" states="nuevo" />
                    <button string="En proceso" name="proceso" type="object" states="asignado" />
                    <button string="Finalizar" name="finalizado" type="object" states="nuevo,asigando,pendiente,proceso" />
                    <field name="state" widget="statusbar" />
                </header>
            
            
                <sheet>
                <!--con esto ponemos el titulo de la ficha creada-->
                <div class="oe_title">
                    <h1>
                        <field name="name" />
                    </h1>
                </div>

                <group>
                    <group>
                        <field name="date"/>
                        <field name="date_limit"/>
                    </group>
                    <group>
                        <field name="user_id"/>
                        <field name="assigned"/>
                        <field name="ticket_qty"/>
                        <field name="time"/>
                    </group>
                </group>
                <notebook>
                    <page string="Description">
                        <field name="description"/>
                        <group>
                            <field name="tag_name"/>
                            <button string="Create tag"
                            name = "create_tag"
                            type = "object"/>
                        </group>
                        <field name="tag_ids"/>
                    </page>
                    <page string="Actions">
                        <field name="actions_ids"/>
                    </page>
                    <page string="Quality">
                        <field name="action_corrective"/>
                        <field name="action_preventive"/>
                    </page>
                </notebook>
                </sheet>
            </form>
        </field>
    </record>
    

</odoo>