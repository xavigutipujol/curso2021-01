<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="heldesk_ticket_action" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">tree,kanban,calendar,pivot,graph,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new product variant
            </p>
        </field>
    </record>


    <record id="action_report_helpdesk_ticket" model="ir.actions.report">
        <field name="name">Ticket Report</field>
        <field name="model">helpdesk.ticket</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">helpdesk_xavigutierrez.report_helpdesk_ticket</field>
        <field name="report_file">helpdesk_xavigutierrez.report_helpdesk_ticket</field>
        <field name="print_report_name">'Ticket - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_helpdesk_ticket"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_partner_helpdesk" model="ir.actions.report">
        <field name="name">Helpdesk Partner ID</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">helpdesk_xavigutierrez.report_partner_helpdesk</field>
        <field name="report_file">helpdesk_xavigutierrez.report_partner_helpdesk</field>
        <field name="print_report_name">'ID/%s' % (object.name)</field>
        <field name="paperformat_id" ref="helpdesk_xavigutierrez.paperformat_helpdesk"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_type">report</field>
    </record>
    
    <menuitem id="helpdesk_menu_root" name="HelpDesk" sequence="10"/>
    <menuitem id="helpdesk_menu_submenu" name="HelpDesk" sequence="10" parent="helpdesk_menu_root"/>
    <menuitem id="helpdesk_menu_action" name="Ticketsss" sequence="10" parent="helpdesk_menu_submenu" action="heldesk_ticket_action"/>

</odoo>